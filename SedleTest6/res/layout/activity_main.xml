<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/post0" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/footprint2" />

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imageView1"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/thumb2" />

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:alpha="0.3"
                    android:src="@drawable/person2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/post2"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/footprint" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imageView2"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/thumb" />

                <ImageView
                    android:id="@+id/ImageView08"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:alpha="0.3"
                    android:src="@drawable/person" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/post3" />

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/footprint2" />

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:layout_alignLeft="@+id/ImageView02"
                    android:layout_below="@+id/ImageView02"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/thumb2" />

                <ImageView
                    android:id="@+id/ImageView09"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/ImageView05"
                    android:alpha="0.3"
                    android:src="@drawable/person2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/post1" />

                <ImageView
                    android:id="@+id/ImageView06"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/footprint2" />

                <ImageView
                    android:id="@+id/ImageView07"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignLeft="@+id/ImageView06"
                    android:layout_below="@+id/ImageView06"
                    android:layout_margin="2dp"
                    android:alpha="0.3"
                    android:src="@drawable/thumb2" />

                <ImageView
                    android:id="@+id/ImageView10"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/ImageView07"
                    android:alpha="0.3"
                    android:src="@drawable/person2" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post4" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post6" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post7" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post9" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post10" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post11" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>